{
  "name": "agentic-training-system",
  "version": "0.1.0",
  "description": "Sistema Agentic de Treinamento com LangGraph, LangChainJS, Fastify, RAG e fluxo de chat paralelo.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@langchain/core": "^0.3.18",
    "@langchain/langgraph": "^0.4.4",
    "@langchain/openai": "^0.3.15",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "langchain": "^0.3.30",
    "pino": "^9.0.0",
    "pino-pretty": "13.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@types/eventsource": "1.1.15",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eventsource": "4.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "mermaid": "^10.9.1",
    "prettier": "^3.3.3",
    "semantic-release": "^23.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.7.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write",
      "eslint --fix --max-warnings=0 || true"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
